<% @resolvers.each do |val| -%>
nameserver <%= val %>
<% end -%>
<% if defined?(@domain) -%>
domain <%= scope.lookupvar('resolvconf::domain') %>
<% end -%>
<% if defined?(@searchlist) -%>
<% if @searchlist.kind_of?(Array) -%>
search <%= @searchlist.join(" ") %>
<% else -%>
search <%= scope.lookupvar('resolvconf::searchlist') %>
<% end -%>
<% end -%>
options timeout:<%= @timeout %> attempts:<%= @attempts %> <% if @rotate %>rotate<% end %>
